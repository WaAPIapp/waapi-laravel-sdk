{
    "name": "waapi/waapi-laravel-sdk",
    "description": "WaAPI Laravel Package",
    "keywords": [
        "WaAPI",
        "laravel",
        "waapi-laravel-sdk"
    ],
    "homepage": "https://github.com/waapi/waapi-laravel-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "WaAPI",
            "email": "info@waapi.app",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.14.0",
        "illuminate/contracts": "^10.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.8",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.8",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "WaAPI\\WaAPI\\": "src/",
            "WaAPI\\WaAPI\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WaAPI\\WaAPI\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-waapi-laravel-sdk --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "WaAPI\\WaAPI\\WaAPIServiceProvider"
            ],
            "aliases": {
                "WaAPI": "WaAPI\\WaAPI\\Facades\\WaAPI"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}